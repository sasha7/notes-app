<div class="row">
  <div class="col-xs-12">
    <div class="login-container">
      <div class="login-header fade-in">
        <a href="/" title="Notes home page"><img src="img/icons/svg/clipboard.svg" alt="Notes-App"></a>
        <h3>Notes App <small>Organize all your notes, everywhere you are.</small></h3>
      </div>
      <div class="login-form">
        {{> notifications}}
        <form action="/login" method="POST">
          <div class="form-group {{#if message.error}}has-error{{/if}}">
            <input name="email" type="text" class="form-control login-field" autofocus value="{{oldUsername}}" placeholder="Enter your email" id="login-name">
            <label class="login-field-icon fui-user" for="email"></label>
          </div>

          <div class="form-group {{#if message.error}}has-error{{/if}}">
            <input name="password" type="password" class="form-control login-field" value="" placeholder="Password" id="login-pass">
            <label class="login-field-icon fui-lock" for="password"></label>
          </div>
          <button type="submit" class="btn btn-primary btn-lg btn-block">Log in</button>
          <a class="login-link" href="#">Lost your password?</a>
        </form>
      </div>
    </div>
  </div>
</div>
